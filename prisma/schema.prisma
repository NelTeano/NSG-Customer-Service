generator client {
  provider = "prisma-client-js"
}


datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
  relationMode = "prisma"
}

model Order {
  id          String      @id @default(auto()) @map("_id") @db.ObjectId
  order_id    Int
  order_list  OrderItem[]
  addons      Addon[]
  status      Boolean
  total       Int
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

type OrderItem {
  product_name String
  qty          Int
  price        Int
}

type Addon {
  product_name String
  qty          Int
  price        Int
}

model Todo {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  isCompleted    Boolean? @default(false)
}
